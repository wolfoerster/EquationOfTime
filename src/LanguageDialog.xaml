<Window x:Class="EquationOfTime.LanguageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose your language" Height="100" Width="300">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Button Grid.Column="0" Content="English" Click="OnButtonClick" Margin="20,15,20,15" IsDefault="true"/>
    <Button Grid.Column="1" Content="Deutsch" Click="OnButtonClick" Margin="20,15,20,15"/>
  </Grid>
</Window>
